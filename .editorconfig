# top-most EditorConfig file
root = true

# default files should use utf-8, tab indentation (set your own tab width in editor), and unix style line endings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
trim_trailing_whitespace = true

[{Makefile,*.mk}]
indent_style = tab

# prettier issue with tabs in markdown
# issue: https://github.com/prettier/prettier/issues/3223
[*.md]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 2
